''' Game '''
abstract class Game {
    Grid : Grid
    PlayerOne : Player
    PlayerTwo: Player
    IsGameActive : bool
    MoveSequence : string
    io : IOController
    file : FileController
    {abstract} GameLoop() : void
    CreateDisc() : Disc
    ' ResetGame() : void
    ' May not need the above method
}
